<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">


    <RelativeLayout
        android:id="@+id/total_price_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gradient_start_color"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/totalPrice"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Total Amount"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="Congraturation your final order has been received successfully, and its waiting for verification "
        android:textSize="20sp"
        android:visibility="gone"
        android:id="@+id/msgOne"
/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/total_price_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/complete_button"
        android:id="@+id/cartList"/>


    <Button
        android:id="@+id/complete_button"
        android:text="COMPLETE YOUR ORDER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gradient_start_color"/>

</RelativeLayout>